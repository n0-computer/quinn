{
    "name": "quinn_perf",
    "cases": [
        {
            "name": "ideal_1_to_1",
            "description": "Ideal network conditions - baseline throughput",
            "nodes": [
                {
                    "name": "srv",
                    "count": 1,
                    "cmd": "./bins/quinn-perf server",
                    "type": "public",
                    "wait": 3,
                    "connect": {
                        "strategy": "none"
                    }
                },
                {
                    "name": "cli",
                    "count": 1,
                    "cmd": "time ./bins/quinn-perf client --bi-requests 1 --upload-size 100M --download-size 100M --duration 60 %s:4433",
                    "type": "public",
                    "connect": {
                        "strategy": "plain",
                        "node": "srv"
                    },
                    "process": "short",
                    "parser": "time_1gb"
                }
            ]
